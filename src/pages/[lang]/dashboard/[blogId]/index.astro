---
import type { PostData } from "@/lib/types";
import Dashboard from "@/layouts/Dashboard.astro";
import { getDashboardContextOfTheBlog } from "@/lib/utilsDB";


const ctx = await getDashboardContextOfTheBlog(Astro);
if (ctx.redirect) return Astro.redirect(ctx.redirect);

const { lang, blogId, blogData, user } = ctx;
---

<Dashboard>
	<div class="flex flex-wrap justify-between items-center mb-6">
		<h2 class="text-2xl font-bold text-gray-800 dark:text-white">
			Your Posts
		</h2>
		<a
			href={`${blogId}/new`}
			class="flex items-center gap-2 px-5 py-3 bg-white/10 dark:bg-noir-core/30 backdrop-blur-sm border border-[--blanc-core]/10 text-[--blanc-core] font-medium rounded-full shadow-md hover:shadow-lg transition-all duration-300 hover:scale-[1.03] hover:border-[--secondary]/50 group"
		>
			<svg
				class="w-5 h-5 text-[--secondary] group-hover:rotate-90 transition-transform duration-300"
				fill="none"
				stroke="currentColor"
				viewBox="0 0 24 24"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M12 4v16m8-8H4"></path>
			</svg>
			<span>Create New Post</span>
		</a>
	</div>
	<div class="flex flex-wrap gap-6">
		{
			blogData?.posts?.map((post: PostData) => (
				<a
					href={`${blogId}/${post.id}`}
					class="flex relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 aspect-square hover:scale-[1.02] group w-full max-w-[17rem]"
				>
					{/* Gradient overlay with animation */}
					<div class="absolute inset-0 bg-gradient-to-br from-[--primary] via-[--secondary] to-[--helper] opacity-90 group-hover:opacity-100 transition-opacity duration-300 z-10" />

					{/* Animated pattern overlay */}
					<div class="absolute inset-0 bg-[url('/images/noise.png')] opacity-20 mix-blend-overlay z-20" />

					{/* Content with glow effect */}
					<div class="absolute bottom-0 left-0 right-0 p-5 text-white z-30 transform transition-transform duration-300 group-hover:translate-y-[-5px]">
						<h2
							class="text-xl font-bold mb-2 line-clamp-2 drop-shadow-md"
							title={post.title}
						>
							{post.title || "Untitled Post"}
						</h2>
						<div class="w-16 h-1 bg-white/70 rounded-full transform origin-left transition-all duration-300 group-hover:w-24 group-hover:bg-white" />
					</div>

					{/* Background color with slight animation */}
					<div class="absolute inset-0 bg-gradient-to-tr from-[--primary]/80 to-[--secondary]/80 z-0 transform transition-transform duration-700 group-hover:scale-110">
						{/* Background animation container */}
					</div>
				</a>
			))
		}
	</div>
</Dashboard>
