---
import { icons } from "./Editing/icons";
import DashboardNav from "./DashboardNav.astro";

interface Props {
  lang: string;
  blogId: string;
  isAuthorized: boolean;
}

const { lang, blogId, isAuthorized } = Astro.props;
const currentPage = Astro.url.pathname.split("/").filter(Boolean).at(-1);
---

<!-- Checkbox para controlar o menu -->
<input type="checkbox" id="mobile-menu" class="peer hidden" />

<!-- Menu Overlay (clicável para fechar) -->
<label for="mobile-menu" class="fixed inset-0 bg-black/50 opacity-0 invisible peer-checked:visible pointer-events-none peer-checked:pointer-events-auto peer-checked:opacity-100 transition-all duration-300 z-[45]"></label>

<!-- Menu Content -->
<div class="fixed inset-x-0 bottom-0 bg-white dark:bg-gray-800 translate-y-full invisible peer-checked:visible peer-checked:translate-y-0 transition-all duration-300 ease-in-out z-[50] h-[75vh] rounded-t-3xl shadow-2xl pointer-events-none peer-checked:pointer-events-auto">
  <!-- Barra de arrasto -->
  <div class="absolute -top-3 left-1/2 -translate-x-1/2 w-12 h-1.5 bg-gray-300 dark:bg-gray-600 rounded-full opacity-75"></div>
  <div class="relative h-full">
    <!-- Botão Fechar -->
    <button class="absolute top-4 right-4 p-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200" onclick="document.getElementById('mobile-menu').checked = false">
      <span set:html={icons.close} />
    </button>

    <!-- Menu Items -->
    <div class="h-full overflow-y-auto px-6 pt-8 py-4">
      <DashboardNav lang={String(lang)} blogId={String(blogId)} isAuthorized={isAuthorized} currentPage={String(currentPage)} />
    </div>
  </div>
</div>

<style>
  .pb-safe {
    padding-bottom: env(safe-area-inset-bottom, 2rem);
  }

  /* Esconde scrollbar mas mantém funcionalidade */
  .overflow-y-auto {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  .overflow-y-auto::-webkit-scrollbar {
    display: none;
  }
</style>
