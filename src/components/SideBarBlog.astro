---
import DashboardNav from "./DashboardNav.astro";

interface Props {
  lang: string;
  blogId: string;
  isAuthorized: boolean;
}

const { lang, blogId, isAuthorized } = Astro.props;

const currentPage = Astro.url.pathname.split("/").filter(Boolean).at(-1);
---

<!-- VersÃ£o Desktop do Menu -->
<aside class="hidden md:block w-full min-[768px]:w-64 max-w-sm ml-2">
  <div
    class="p-4 fixed top-[5rem] w-64 max-h-[calc(100dvh-6rem)] overflow-y-auto rounded-lg bg-white dark:bg-gray-900 backdrop-blur-md shadow-sm border-b border-gray-100/50 dark:border-gray-800/50 [&::-webkit-scrollbar]:w-1.5 [&::-webkit-scrollbar-track]:bg-gray-900 [&::-webkit-scrollbar-thumb]:bg-gray-700 hover:[&::-webkit-scrollbar-thumb]:bg-gray-600 [&::-webkit-scrollbar-thumb]:transition-all [&::-webkit-scrollbar-thumb]:duration-200"
  >
    <DashboardNav
      lang={String(lang)}
      blogId={String(blogId)}
      isAuthorized={isAuthorized}
      currentPage={String(currentPage)}
    />
  </div>
</aside>
