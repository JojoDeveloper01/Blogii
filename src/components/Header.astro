---
import HeaderLink from "@components/HeaderLink.astro";
import { SITE_TITLE } from "@lib/consts";
import LoginRegister from "./LoginRegister.astro";
import { supabase } from "@lib/supabase";
import UserMenu from "./UserMenu.astro";
import {generateShortNumericId} from "@lib/utils";

const idLoginModal = generateShortNumericId(); 

const {
	data: { user },
} = await supabase.auth.getUser();

const { lang } = Astro.props;
---

<header>
	<nav>
		<h2><a href={`/${lang}/`}>{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href={`/${lang}/`}>Home</HeaderLink>
			<HeaderLink href={`/${lang}/blog`}>Blog</HeaderLink>
			<HeaderLink href={`/${lang}/about`}>About</HeaderLink>
		</div>
		<div>
			{
				user ? (
					<UserMenu {user} />
				) : (
					<>
						<LoginRegister id={idLoginModal} message="Sign in to access all features"/>
						<button
							onclick={`document.getElementById('${idLoginModal}').showModal()`}
							class="px-4 py-2 text-sm font-medium text-zinc-800 dark:text-white bg-white dark:bg-zinc-800 rounded-lg hover:bg-zinc-100 dark:hover:bg-zinc-700 border border-zinc-300 dark:border-zinc-600 focus:outline-none focus:ring-2 focus:ring-zinc-500 focus:ring-offset-2 transition-all"
						>
							Login / Register
						</button>
					</>
				)
			}
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--primary);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
