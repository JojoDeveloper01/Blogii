---
import { icons } from "@/components/Editing/icons";

interface Props {
  id: string;
  title: string;
  message: string;
}

const { id, title, message } = Astro.props;
---

<dialog
  id={id}
  class="backdrop:bg-black/50 backdrop:backdrop-blur-sm rounded-xl p-0 max-w-md w-full mx-auto shadow-2xl border border-gray-200 dark:border-gray-700 overflow-hidden bg-white dark:bg-gray-800"
>
  <div
    class="bg-gradient-to-r from-[#250707] to-[#450a0a2e] p-5 border-b border-red-900/30"
  >
    <div class="flex items-center gap-3">
      <div class="p-2 rounded-full bg-red-500/20 text-red-400">
        <span set:html={icons.alert} />
      </div>
      <h3 class="text-xl font-bold text-red-300">{title}</h3>
    </div>
  </div>

  {/* Content */}
  <div class="p-6 bg-[--noir-core]">
    <p class="text-[--blanc-core] mb-8 text-base">{message}</p>

    <div class="flex flex-wrap justify-end gap-4">
      <slot />
      <button
        type="button"
        onclick="this.closest('dialog').close()"
        class="px-5 py-2.5 border border-[--blanc-core] rounded-lg text-[--blanc-core] hover:bg-[--blanc-core] hover:border-[--blanc-core] hover:text-[--noir-core] transition-all duration-300 hover:scale-[1.02] active:scale-[0.98]"
      >
        Cancel
      </button>
    </div>
  </div>
</dialog>
