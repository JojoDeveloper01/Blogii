---
import ThemeSwitcher from "@/components/ThemeSwitcher.astro";
const { blog, lang } = Astro.props;
---

<header class="text-[--text-primary] py-8">
  <div
    class="mx-auto px-4 flex items-center justify-between text-center gap-6"
  >
    <!-- Avatar & Title -->
    <div class="flex flex-col items-center gap-3 md:flex-row md:gap-6">
      <!--  <img
        src="/avatar.png"
        alt="Avatar"
        class="h-28 w-28 rounded-full object-cover shadow-md"
      /> -->
      <a href={`/${lang}/${blog.title}`}>
        <h1
          class="text-3xl font-bold mb-1 border-b-4 border-[--secondary] hover:border-[--text-secondary] inline-block pb-1"
        >
          {blog.title}
        </h1>
      </a>
    </div>

    <!-- Navegação -->
    <nav
      class="flex flex-wrap justify-center gap-4 text-sm font-mono tracking-wide"
    >
      <a href={`/${lang}/${blog.title}`} class="hover:text-[--secondary]"
        >home</a
      >
      <a
        href={`/${lang}/${blog.title}/blog`}
        class="hover:text-[--secondary]">blog</a
      >
      <a
        href={`/${lang}/${blog.title}/about`}
        class="hover:text-[--secondary]">about</a
      >
      <!--       <a
        href={`/${lang}/${blog.title}/newsletter`}
        class="hover:text-[--secondary]">newsletter</a
      >
      <a
        href={`/${lang}/${blog.title}/github`}
        class="hover:text-[--secondary]">github</a
      > -->
    </nav>
  </div>
</header>
